<div id="class_group_page<%if @class_group.is_archive%>_archive<% end%>">

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @class_group.name %>
</p>

<p>
  <strong>Academic year:</strong>
  <%= @class_group.academic_year %>
</p>

<p>
  <strong>Year:</strong>
  <%= @class_group.year %>
</p>

<p>
  <strong>Status:</strong>
  <% if @class_group.is_archive == true  %>
    <span style ="color:red">ARCHIVED</span>
  <% else %>
    <span style ="color:green">CURRENT</span>
  <% end %>
</p>


<p>
  <strong>Number in class:</strong>
  <%= @students.count %>
</p>

<%= link_to 'Edit', edit_class_group_path(@class_group) %> |
<%= link_to 'Back', class_groups_path %>


<h3>Students</h3>
<table>
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>First name</th>
      <th>Last name</th>
      <% @homeworks.each do |homework| %>
        <th><p><%= link_to homework.title[0..3], homework_comments_path(homework)%><br /><%= homework.score %></th>
        <% end %>
    </tr>
  </thead>
  <tbody>

<% @students.each do |student| %>
  <tr>
    <td><% if student.flag %>
      <%= image_tag("flags-icon-png-10292.png", size: "16") %>
        <% end %>
    </td>
    <td><%= link_to student.first_name, edit_student_url(student) %></td>
    <td><%= link_to student.last_name, edit_student_url(student) %></td>
    <% @homeworks.each do |homework| %>
      <% results = @class_group.get_scores(homework) %>
      <% result = results[student.id][:result] %>
        <td class="<%= @class_group.set_colour(homework, result) %>"> <%= result %>
          <% if results[student.id][:is_merit] %>
            <%= image_tag("flags-icon-png-10291.png", size: "12") %>
          <% elsif results[student.id][:is_resubmit] %>
            <%= image_tag("flags-icon-png-10292.png", size: "12") %>
          <% end %>

        </td>
    <% end %>
  </tr>
<% end %>
  </tbody>
</table>
</div>
