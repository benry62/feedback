<p id="notice"><%= notice %></p>

<h1>Class Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Number in class</th>
      <th>Academic year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @class_groups.each do |class_group| %>
    <tr<% if class_group.is_archive %> class="not_current" <% end %>>
        <td><%= class_group.name %></td>
        <td><%= class_group.year %></td>
        <td><%= class_group.number_in_class %></td>
        <td><%= class_group.academic_year %></td>
        <td><%= link_to 'Show', class_group %></td>
        <td><%= link_to 'Edit', edit_class_group_path(class_group) %></td>
        <td><%= link_to 'Destroy', class_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Class Group', new_class_group_path %>
<p><button>Show/hide archive</button></p>
