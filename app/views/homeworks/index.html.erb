<p id="notice"><%= notice %></p>

<h1>Homeworks</h1>

<table>
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Class group</th>
      <th>Date</th>
      <th>Title</th>
      <th>W/S</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homeworks.each do |homework| %>
    <% unless homework.class_group.is_archive == true %>
      <tr>
        <td class="c<%= homework.class_group.name %>">&nbsp</td>
        <td  ><%= link_to homework.class_group.name, class_group_path(homework.class_group) %></td>
        <td><%= homework.date.strftime("%d %b %y")%></td>
        <td><%= link_to homework.title, homework_comments_path(homework) %></td>
        <td><%= raw homework.pretty_boolean(homework.is_worksheet) %></td>
        <td><%= link_to 'Report', homework %></td>
        <td><%= link_to 'Edit', edit_homework_path(homework) %></td>
        <td><%= link_to 'Destroy', homework, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Homework', new_homework_path %>
