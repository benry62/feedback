<p id="notice"><%= notice %></p>

<h1>Students</h1>
<%= link_to 'New Student', new_student_path %>
<p><button>Show/hide archive</button></p>

<table>
  <thead>
    <tr>
      <th> &nbsp; </th>
      <th> &nbsp; </th>
      <th>First name</th>
      <th>Last name</th>
      <th> &nbsp; </th>
      <th>Class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr<% unless student.is_current %> class="not_current" <% end %>>
        <td class="c<%= student.class_group.name %>">&nbsp</td>
        <td><% if student.flag %>
              <%= image_tag("flags-icon-png-10292.png", size: "16") %>
            <% end %>
        </td>
        <td><%= link_to student.first_name, student %></td>
        <td><%= link_to student.last_name, student %></td>
        <td><% if student.is_pp %>
              <%= image_tag("blue_flag.png", size: "16", alt: "PP") %>
            <% end %>
            <% if student.is_sen %>
              <%= image_tag("orange_flag.png", size: "16", alt: "SEN") %>
            <% end %>
        </td>
        <td><%= student.class_group.name %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
<p><button>Show/hide archive</button></p>
